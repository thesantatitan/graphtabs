{
  "manifest_version": 3,
  "name": "GraphTabs",
  "description": "Visualize open tabs with live thumbnails; host permissions enable local captures.",
  "version": "0.1.0",
  "action": {
    "default_title": "GraphTabs"
  },
  "side_panel": {
    "default_path": "src/tabgraph/index.html"
  },
  "background": {
    "service_worker": "src/background/service_worker.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "src/tabgraph/index.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["tabs", "storage", "sidePanel"],
  "host_permissions": ["<all_urls>"]
}
